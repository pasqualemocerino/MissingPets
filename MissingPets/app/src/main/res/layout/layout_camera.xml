<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/page_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1">

        <!-- add Camera Button to open the Camera -->
        <TableRow android:gravity="center_horizontal">
            <Button
                android:id="@+id/camera_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Camera" />
        </TableRow>
        <!-- add ImageView to display the captured image -->
        <TableRow android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/click_image"
                android:layout_width="310dp"
                android:layout_height="400dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />
        </TableRow>
        <!-- Pulsante per inviare la foto al server -->
        <TableRow android:gravity="center_horizontal">
            <Button
                android:id="@+id/confirm_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Confirm" />
        </TableRow>
        <!-- Scritta che dice "waiting for gps" -->
        <TableRow android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="Waiting for GPS..."
                android:textColor="#757575"
                android:textSize="14sp"
                android:textStyle="italic" />
        </TableRow>
    </TableLayout>

    <!-- Loading screen -->
    <TableLayout
        android:id="@+id/loading_screen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill_vertical"
            android:translationY="-30dp">

            <TextView
                android:id="@+id/HeaderTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Finding best matches..."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:translationY="-30dp">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:progressDrawable="@drawable/circular_progress_bar" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
